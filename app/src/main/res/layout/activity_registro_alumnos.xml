<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/etDNIAlumnos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:ems="10"
                android:hint="@string/dni"
                android:inputType="textPersonName"
                android:textColor="@color/azul"
                android:textColorHint="@color/azul" />

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:ems="10"
                android:hint="@string/etnombre"
                android:inputType="textPersonName"
                android:textColor="@color/linea_escribir"
                android:textColorHint="@color/linea_escribir" />

            <EditText
                android:id="@+id/etApellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:ems="10"
                android:hint="@string/etapellidos"
                android:inputType="textPersonName"
                android:textColor="@color/linea_escribir"
                android:textColorHint="@color/linea_escribir" />

            <EditText
                android:id="@+id/etCorreoR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textColor="@color/linea_escribir"
                android:textColorHint="@color/linea_escribir" />

            <EditText
                android:id="@+id/etPasswordR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:ems="10"
                android:hint="@string/etpass"
                android:inputType="textPassword"
                android:textColor="@color/linea_escribir"
                android:textColorHint="@color/linea_escribir" />

            <RelativeLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <Spinner
                    android:id="@+id/spinnerCursos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RadioGroup
                    android:id="@+id/radioPrimeroDAMAlum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/spinnerCursos"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:baselineAligned="false"
                    android:hapticFeedbackEnabled="true">

                    <CheckBox
                        android:id="@+id/cbFOLAlum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:foregroundGravity="center"
                        android:text="FOL" />

                    <CheckBox
                        android:id="@+id/cbInglesAlum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:foregroundGravity="center"
                        android:text="Ingles" />

                    <CheckBox
                        android:id="@+id/cbBasesAlum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:foregroundGravity="center"
                        android:text="BBDD" />

                    <CheckBox
                        android:id="@+id/cbProgramAlum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:foregroundGravity="center"
                        android:text="ProgramaciÃ³n" />

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radioPrimeroMYPAlum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/spinnerCursos"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:baselineAligned="false"
                    android:hapticFeedbackEnabled="true" >

                    <CheckBox
                        android:id="@+id/cbFOLMYP1Alum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:foregroundGravity="center"
                        android:text="FOL" />

                    <CheckBox
                        android:id="@+id/cbInglesMYP1Alum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:foregroundGravity="center"
                        android:text="Ingles" />
                    <CheckBox
                        android:id="@+id/cbGEYFEMYPAlum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:foregroundGravity="center"
                        android:text="GEYFE" />

                    <CheckBox
                        android:id="@+id/cbPLMKMYPAlum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:foregroundGravity="center"
                        android:text="PLMK" />
                </RadioGroup>
                <RadioGroup
                    android:id="@+id/radioPrimeroCINAlum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/spinnerCursos"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:baselineAligned="false"
                    android:hapticFeedbackEnabled="true" >

                    <CheckBox
                        android:id="@+id/cbFOLCIN1Alum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:foregroundGravity="center"
                        android:text="FOL" />

                    <CheckBox
                        android:id="@+id/cbInglesCIN1Alum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:foregroundGravity="center"
                        android:text="Ingles" />
                    <CheckBox
                        android:id="@+id/cbGEYFECINAlum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:foregroundGravity="center"
                        android:text="GEYFE" />

                </RadioGroup>

                <Button
                    android:id="@+id/btnRegistrarse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radioPrimeroDAMAlum"
                    android:layout_marginTop="30dp"
                    android:onClick="registrarAlumnos"
                    android:text="@string/registrarse"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/linea_escribir" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>